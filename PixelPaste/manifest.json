{
    "manifest_version": 3,
    "name": "PixelPaste",
    "version": "1",
    "description": "Instantly paste and save images. Powered by askharoun.dev",
    
    "icons": {
      "128": "images/icon-128.png"
    },
  
    "action": {
      "default_popup": "popup.html",
      "default_title": "Open PixelPaste",
      "default_icon": {
        "128": "images/icon-128.png"
      }
    },
  
    "permissions": ["activeTab", "scripting"],
    "host_permissions": ["<all_urls>"]
  }