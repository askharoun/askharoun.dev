{
  "manifest_version": 3,
  "name": "Email Code Extractor",
  "version": "1.0",
  "description": "Automatically detects OTP codes in Gmail rows and allows one-click copying.",
  "permissions": [
    "clipboardWrite"
  ],
  "host_permissions": [
    "https://mail.google.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["contentScript.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}